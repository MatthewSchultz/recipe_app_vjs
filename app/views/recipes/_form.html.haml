= form_for @recipe do |f|
  - if @recipe.errors.any?
    #error_explanation
      %h2= "#{pluralize(@recipe.errors.count, "error")} prohibited this recipe from being saved:"
      %ul
        - @recipe.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :cuisine
    = f.number_field :cuisine
  .field
    = f.label :planning_to_cook_on
    = f.datetime_select :planning_to_cook_on
  .field
    = f.label :tried_before
    = f.check_box :tried_before
  .field
    = f.label :instructions
    = f.text_area :instructions
  .actions
    = f.submit 'Save'
